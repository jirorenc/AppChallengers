<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="AppChallengersPersistenceUnit">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>com.appchallengers.webservice.model.entity.Users</class>
        <class>com.appchallengers.webservice.model.entity.Country</class>
        <class>com.appchallengers.webservice.model.entity.Relationship</class>
        <class>com.appchallengers.webservice.model.entity.Challenges</class>
        <class>com.appchallengers.webservice.model.entity.ChallengeDetail</class>
        <class>com.appchallengers.webservice.model.entity.Votes</class>
        <properties>
            <property name="eclipselink.jdbc.url" value="jdbc:derby://localhost:1527/appchallengers_vt"/>
            <property name="eclipselink.jdbc.driver" value="org.apache.derby.jdbc.ClientDriver"/>
            <property name="eclipselink.jdbc.user" value="appchallengers"/>
            <property name="eclipselink.jdbc.password" value="appchallengers"/>
            <!--<property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>-->
            <property name="eclipselink.logging.level" value="FINE"/>
        </properties>
    </persistence-unit>
</persistence>
