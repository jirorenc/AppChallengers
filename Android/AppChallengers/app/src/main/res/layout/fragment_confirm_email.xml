<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="1.0"
    tools:context="com.appchallengers.appchallengers.fragments.login.ConfirmEmailFragment">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.3"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/confirm_email_fragment_logo_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/logo1" />

        <com.appchallengers.appchallengers.helpers.component.TextViewComponent
            android:id="@+id/confirm_email_fragment_app_name_textviev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="AppChallengers"
            android:textColor="#969FAA"
            android:textSize="25sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.7"
        android:orientation="vertical">

        <com.dd.processbutton.iml.ActionProcessButton
            android:id="@+id/confirm_email_fragment_email_validate_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:background="@color/Color_login_edit"
            android:text="My E-mail Validate"
            android:textColor="@android:color/white" />

        <com.appchallengers.appchallengers.helpers.component.TextViewComponent
            android:id="@+id/confirm_email_fragment_code_again_send_link_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Didn't come to code, again send!"
            android:textColor="#969FAA"
            android:textSize="20sp" />


    </LinearLayout>

</LinearLayout>
